{
	"type": "module",
	"name": "@intrnl/esbuild-plugin-velvet",
	"description": "Velvet plugin for esbuild",
	"version": "0.4.4",
	"author": "intrnl",
	"license": "MIT",
	"repository": {
		"url": "https://codeberg.org/intrnl/velvet",
		"directory": "packages/esbuild-plugin"
	},
	"files": [
		"dist/"
	],
	"exports": {
		".": {
			"require": "./dist/cjs/index.js",
			"import": "./dist/esm/index.js"
		},
		"./ccss": {
			"require": "./dist/cjs/ccss_plugin.js",
			"import": "./dist/esm/index.js"
		}
	},
	"dependencies": {
		"@intrnl/fs-cache": "^0.2.3"
	},
	"scripts": {
		"prepublishOnly": "pnpm run bundle",
		"bundle": "wireit"
	},
	"wireit": {
		"bundle": {
			"command": "rollup -c",
			"clean": "if-file-deleted",
			"files": [
				"src/**/*.js",
				"rollup.config.js"
			],
			"output": [
				"dist/**/*.js",
				"mangle.json"
			],
			"packageLocks": [
				"pnpm-lock.yaml"
			]
		}
	},
	"peerDependencies": {
		"@intrnl/velvet-compiler": ">=0.4.0",
		"esbuild": "^0.14.8 || ^0.15.0"
	},
	"devDependencies": {
		"@intrnl/velvet": "workspace:^0.3.1",
		"@intrnl/velvet-compiler": "workspace:^0.6.0",
		"esbuild": "^0.15.7",
		"rollup": "^2.79.0",
		"wireit": "^0.7.1"
	}
}

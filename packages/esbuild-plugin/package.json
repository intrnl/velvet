{
	"type": "module",
	"name": "@intrnl/esbuild-plugin-velvet",
	"description": "Velvet plugin for esbuild",
	"version": "0.6.1",
	"author": "intrnl",
	"license": "MIT",
	"repository": {
		"url": "https://codeberg.org/intrnl/velvet",
		"directory": "packages/esbuild-plugin"
	},
	"files": [

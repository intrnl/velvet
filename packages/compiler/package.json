{
	"type": "module",
	"name": "@intrnl/velvet-compiler",
	"version": "0.6.0",
	"author": "intrnl",
	"license": "MIT",
	"repository": {
		"url": "https://codeberg.org/intrnl/velvet",
		"directory": "packages/compiler"
	},
	"files": [
		"dist/"
	],
	"exports": {
		".": {
			"require": "./dist/cjs/index.js",
			"import": "./dist/esm/index.js"
		}
	},
	"scripts": {
		"prepublishOnly": "pnpm run bundle",
		"bundle": "wireit",
		"test": "node --test --expose-internals test/",
		"test:update": "node --update-assert-snapshot --test --expose-internals test/"
	},
	"wireit": {
		"bundle": {
			"command": "rollup -c",
			"clean": "if-file-deleted",
			"files": [
				"src/**/*.js",
				"rollup.config.js"
			],
			"output": [
				"dist/**/*.js",
				"mangle.json"
			],
			"packageLocks": [
				"pnpm-lock.yaml"
			]
		}
	},
	"peerDependencies": {
		"@intrnl/velvet": "workspace:^0.3.0"
	},
	"dependencies": {
		"acorn": "^8.8.0",
		"astring": "^1.8.3",
		"gensync": "^1.0.0-beta.2"
	},
	"devDependencies": {
		"@intrnl/node-jestlike-snapshots": "workspace:^0.1.0",
		"@intrnl/velvet": "workspace:^0.3.1",
		"@types/estree": "^1.0.0",
		"esbuild": "^0.15.7",
		"rollup": "^2.79.0",
		"wireit": "^0.7.1"
	}
}

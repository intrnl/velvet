{
	"private": true,
	"name": "velvet-language-support",
	"displayName": "Velvet Language Support",
	"description": "Adds language support for Velvet",
	"publisher": "intrnl",
	"version": "0.0.8",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Programming Languages"
	],
	"repository": {
		"url": "https://codeberg.org/intrnl/velvet",
		"directory": "packages/vscode-extension"
	},
	"contributes": {
		"languages": [
			{
				"id": "velvet",
				"aliases": [
					"Velvet",
					"velvet"
				],
				"extensions": [
					".velvet"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "velvet",
				"scopeName": "source.velvet",
				"path": "./syntaxes/velvet.tmLanguage.json"
			}
		]
	},
	"devDependencies": {
		"vsce": "^2.15.0"
	}
}
